{
  "manifest_version": 3,
  "name": "PokéCraft Companion",
  "version": "1.0.0",
  "description": "Your Pokémon AI companion creator - chat with custom Pokémon agents you create in PokéCraft!",
  "permissions": ["sidePanel", "storage"],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://localhost:8080/*"
  ],
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_title": "Open PokéCraft Companion"
  }
}
